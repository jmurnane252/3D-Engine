    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch C/C++",
            "type": "cppdbg",
            "request": "launch",
            // This line dynamically finds the correct .exe built by CMake
            "program": "${command:cmake.launchTargetPath}", 
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            // You MUST verify this path points to your actual gdb.exe location
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe", 
            // Adds the SDL3 DLL path to the environment when running
            "env": {
                "PATH": "D:\\C Projects\\Isometric Game + Engine\\external\\SDL3\\SDL3-3.2.28\\x86_64-w64-mingw32\\bin\\SDL3.dll"
            }
        }
    ]
}